<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97FF0000"
    tools:context=".ui.scifi.SciFiFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-107dp">

                <LinearLayout
                    android:layout_width="403dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tries left :"
                            android:textColor="#000000"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/triesTXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="5"
                            android:textColor="#000000"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Points :"
                            android:textColor="#000000"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/pointsTXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0"
                            android:textSize="34sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="53dp"
                    android:background="#FF9100"
                    android:text="GUESS THE NUMBER"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:layout_marginBottom="48dp"
                    android:fontFamily="casual"
                    android:text="I am thinking a number between 1 to 100. Can you guess what it is ?"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/editId"
                    android:layout_width="348dp"
                    android:layout_height="67dp"
                    android:layout_marginBottom="200dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="ENTER"
                    android:inputType="numberDecimal" />

                <Button
                    android:id="@+id/guessBTN"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginBottom="68dp"
                    android:onClick="clickFunction"
                    android:text="GUESS"
                    android:textSize="30sp" />

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>